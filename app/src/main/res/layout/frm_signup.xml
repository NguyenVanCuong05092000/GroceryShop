<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.fragment.FrmSignUp">
    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imgBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_bg"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glH17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17"/>
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_logo"
        app:layout_constraintTop_toBottomOf="@+id/glH17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/mtEdtLogin"
        android:id="@+id/clLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingHorizontal="10dp"
                android:background="@drawable/bg_btn_white"
                android:layout_marginTop="@dimen/mtImgLogoWelcome"
                android:id="@+id/clEdtName"
                app:layout_constraintTop_toBottomOf="@+id/btnLoginWelCome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_user"/>
                <EditText
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/edtName"
                    android:background="@null"
                    android:textSize="@dimen/tsEdtLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Full Name*"
                    android:textStyle="bold"/>
            </LinearLayout>


            <LinearLayout
                android:paddingHorizontal="10dp"
                android:background="@drawable/bg_btn_white"
                android:layout_marginTop="@dimen/mtEdtLogin"
                android:id="@+id/clEdtEmail"
                app:layout_constraintTop_toBottomOf="@+id/btnLoginWelCome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_envelope"/>
                <EditText
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/edtEmail"
                    android:background="@null"
                    android:textSize="@dimen/tsEdtLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Email*"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="10dp"
                android:background="@drawable/bg_btn_white"
                android:layout_marginTop="@dimen/mtEdtLogin"
                android:id="@+id/clEdtPass"
                app:layout_constraintTop_toBottomOf="@+id/btnLoginWelCome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock"/>
                <EditText
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/edtPass"
                    android:background="@null"
                    android:textSize="@dimen/tsEdtLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Password*"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/mtEdtLogin"
                android:id="@+id/btnSignUp"
                app:layout_constraintTop_toBottomOf="@+id/btnLoginWelCome"
                android:background="@drawable/bg_btn_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_user_plus_white"/>
                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/mtEdtLogin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clLogin"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/tsEdtLogin"
                    android:text="Already have an account?"/>
                <TextView
                    android:id="@+id/tvSignIn"
                    android:textColor="@color/colorYellow"
                    android:layout_marginStart="@dimen/mtImgLogoWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/tsEdtLogin"
                    android:text="Sign in"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvSingUpWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Or\n Sin up with"
        android:textSize="@dimen/tsEdtLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clLogin" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvSingUpWith"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:src="@drawable/ic_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgSingUpGoogle"/>
        <ImageView
            android:src="@drawable/ic_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgSingUpFacebook"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>